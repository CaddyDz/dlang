{
	"workbench.settings.editor": "json",
	"explorer.openEditors.visible": 0,
	"files.autoSave": "onFocusChange",
	"workbench.startupEditor": "newUntitledFile",
	// Controls whether the minimap is shown.
	"editor.minimap.enabled": false,
	// Show available settings and user setting side by side
	"workbench.settings.useSplitJSON": true,
	"editor.wordWrap": "on",
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"editor.renderWhitespace": "boundary",
	"editor.autoIndent": "brackets",
	"editor.tabSize": 4,
	"breadcrumbs.enabled": false,
	"editor.formatOnSave": true,
	"window.restoreFullscreen": true,
	"files.insertFinalNewline": true,
	"workbench.editor.enablePreview": false,
	"explorer.autoReveal": false,
	"extensions.ignoreRecommendations": true,
	"files.trimTrailingWhitespace": true,
	"editor.fontFamily": "Fira Code",
	"editor.fontLigatures": true,
	"update.mode": "manual",
	"vetur.format.options.useTabs": true,
	"vetur.format.options.tabSize": 4,
	"explorer.confirmDragAndDrop": false,
	"discord.silent": true,
	"discord.detailsEditing": "Fighting {filename}",
	"discord.detailsIdle": "Coffee time",
	"discord.smallImage": "vscode",
	"discord.largeImageIdle": "Coffee time",
	"discord.lowerDetailsEditing": "Project: {workspace}",
	"discord.largeImage": "Fighting a {LANG} file",
	"editor.multiCursorModifier": "ctrlCmd",
	"workbench.iconTheme": "vscode-icons",
	"vsicons.dontShowNewVersionMessage": true,
	"editor.fontSize": 18,
	"[php]": {
		"editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
	},
	"workbench.colorTheme": "GitHub Dark",
	"[json]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	// Adding new filename extensions to an already supported icon.
	// note: the format must match the existing one. If not, it will use the extension you provide.
	"vsicons.associations.folders": [{
			"icon": "macos",
			"extensions": ["mac"],
			"format": "svg"
		},
		{
			"icon": "server",
			"extensions": ["vps"],
			"format": "svg"
		},
		{
			"icon": "cli",
			"extensions": ["terminal"],
			"format": "svg"
		},
		{
			"icon": "github",
			"extensions": ["github"],
			"format": "svg"
		},
		{
			"icon": "git",
			"extensions": ["git"],
			"format": "svg"
		},
		{
			"icon": "node",
			"extensions": ["node"],
			"format": "svg"
		}
	],
	"vsicons.associations.files": [{
			"icon": "mysql",
			"extensions": [".my.cnf"],
			"filename": true,
			"format": "svg"
		},
		{
			"icon": "nuxt",
			"extensions": [".nuxtrc"],
			"filename": true,
			"format": "svg"
		},
		{
			"icon": "php",
			"extensions": [".pearrc"],
			"filename": true,
			"format": "svg"
		}
	]
}
